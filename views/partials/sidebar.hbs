<div class="col-lg-4 col-md-5">
  <div class="blog__sidebar">
    <div class="blog__sidebar__search">
      <form action="/blogs" method="get">
        <input type="text" placeholder="Search..." id="search" name="search" />
        <button type="submit"><span class="icon_search"></span></button>
      </form>
    </div>
    <div class="blog__sidebar__item">
      <h4>Categories</h4>
      <ul>{{#each categories}}
          <li><a
              href="#"
              onclick="select_category('{{name}}')"
            >{{name}}</a></li>
        {{/each}}
      </ul>
    </div>

    <div class="blog__sidebar__item">
      <h4>Search By Tags</h4>
      <div class="blog__sidebar__item__tags">
        {{#each tags}}
          <a href="#" onclick="select_tag('{{name}}')">{{name}}</a>
          {{! <a href="#" onclick="select_tag('Beauty')">Beauty</a>
          <a href="#" onclick="select_tag('Vegetables')">Vegetables</a>
          <a href="#" onclick="select_tag('Fruit')">Fruit</a>
          <a href="#" onclick="select_tag('Healthy Food')">Healthy Food</a>
          <a href="#" onclick="select_tag('Lifestyle')">Lifestyle</a> }}
        {{/each}}
      </div>
    </div>
  </div>
</div>